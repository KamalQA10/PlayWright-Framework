{
  "name": "playwrite_framework",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "clean:allure": "rimraf allure-results src/reporting/allure-results src/reporting/allure-report",
    "test:int": "cross-env TEST_ENV=int npx playwright test --project=ui --headed",
    "test:qa": "cross-env TEST_ENV=qa npx playwright test --project=ui --headed",
    "test:dev": "cross-env TEST_ENV=dev npx playwright test --project=ui --headed",
    "test:api_INT": "cross-env TEST_ENV=int npx playwright test --project=api",
    "test:api_QA": "cross-env TEST_ENV=qa npx playwright test --project=api",
    "test:allure": "npm run clean:allure && ts-node -r tsconfig-paths/register node_modules/.bin/playwright test --config=playwright.config.ts && npx allure generate src/reporting/allure-results --clean -o src/reporting/allure-report",
    "install:playwright": "npx playwright install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@types/axios": "^0.9.36",
    "@types/node": "^24.0.15",
    "allure-playwright": "^3.3.2",
    "cross-env": "^10.0.0",
    "dotenv-flow": "^4.1.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "dotenv": "^17.2.1"
  }
}
