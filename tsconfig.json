{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      // Added for UI layer
      "@fixtures/*": ["uiUtils/fixtures/*"],
      "@pages": ["ui/pages/index.ts"],
      "@uiUtils/*": ["ui/Utils_UI/*"],
      "@tests/*": ["tests/*"],
      "@data/*": ["ui/data/*"],
      "@config_UI/*": ["ui/config_UI/*"],

      // Added for API layer
      "@apiUtils/*": ["api/utils_API/*"],
      "@apiConfig/*": ["api/config_API/*"],
      "@apiData/*": ["api/data_API/*"],
      "@apiServices/*": ["api/services_API/*"],
      "@apiTests/*": ["api/tests_API/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],

  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
